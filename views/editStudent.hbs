<html>

<head>
    <title>Geography Now!</title>
    <link rel="stylesheet" href="/style.css">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" href="https://media.geeksforgeeks.org/wp-content/cdn-uploads/gfg_200X200.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/x-icon" href="images/logo.png">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover:not(.active) {
            background-color: #111;
        }

        .footer {
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #333;
            color: white;
            text-align: center;
        }
    </style>
</head>

<body style="background-color: #162944; color:white">
    <ul>
        <li><a href="">Result Management System</a></li>
        <li><a href="">Dilpreet Kaur</a></li>
        <li><a href="">2019CSC1012</a></li>
        <li style="float:right"><a href="">SET-B</a></li>
    </ul>
    <section class="mid">
        <div class="container" align=center>
            <br>
            <h3>Welcome</h3>
            <div class="row shadow">
                <h3><br>Records</h3>
                <hr class="style-one"><br>
                <br>
                <table class="table table-striped" style="color:white">
                    <tr align=center style="color: wheat;">
                        <th>Name</th>
                        <th>Roll Number</th>
                        <th>Date of Birth</th>
                        <th>Result</th>
                        <th></th>
                    </tr>
                    {{#each row}}
                    <tr align=center>
                        <!--<td><img src="{{this.img}}" style="width: 200;"></td>-->
                        <td style="vertical-align: middle;font-size: 30px;">{{this.name}}</td>
                        <td style="vertical-align: middle;font-size: 30px;">{{this.rollno}}</td>
                        <td style="vertical-align: middle;font-size: 30px;">{{this.dob}}</td>
                        <td style="vertical-align: middle;font-size: 30px;">{{this.score}}</td>
                        <!--<td style="vertical-align: middle;font-size: 30px;"><btn class="btn btn-success" onclick="document.location ='{{this.link}}'">Continue</btn></td>-->
                    </tr>
                    {{/each}}
                </table>
            </div> <br>
            <btn class="button" onclick="document.getElementById('addform').style.display='block';">Add Record</btn>
            <btn class="button" onclick="document.getElementById('addform').style.display='block';">EditRecord</btn>
            <btn class="button" onclick="document.getElementById('delform').style.display='block';">Delete Record</btn>
            <a href="/auth/logout"><button class="button">Logout</button></a>
        </div>
        <br>
        <div id="addform" style="display: none;">
            <form class="row g-3 forml" action="/auth/registerteacher2" method="POST">
                <h1 style="color:white"><i class="fa fa-pencil" style="color:white"></i> Add/Edit Record</h1>
                <div class="col-12">
                    <input type="text" name="name" class="form-control name" id="inputAddress" placeholder="Name"
                        required>
                </div>
                <div class="col-12">
                    <input type="email" name="email" class="form-control email" id="inputAddress" placeholder="Email"
                        required>
                </div>
                <div class="col-12">
                    <input type="text" name="roll_no" class="form-control roll_no" id="inputAddress"
                        placeholder="Roll Number" required>
                </div>
                <div class="col-12">
                    <input type="date" name="dob" class="form-control dob" id="inputAddress" placeholder="Date of Birth"
                        required>
                </div>
                <div class="col-12">
                    <input type="text" name="score" class="form-control score" id="inputAddress" placeholder="Score"
                        required>
                </div>
                <button type="submit" class="button submit">Submit</button>

            </form>
        </div>
        <div id="delform" style="display: none;">
            <form class="row g-3 forml" action="/auth/deletestudent" method="POST">
                <h1 style="color:white"><i class="fa fa-pencil" style="color:white"></i> Delete Record</h1>
                <div class="col-12">
                    <input type="text" name="name" class="form-control name" id="inputAddress" placeholder="Name"
                        required>
                </div>
                <div class="col-12">
                    <input type="email" name="email" class="form-control email" id="inputAddress" placeholder="Email"
                        required>
                </div>
                {{#if message}}
                <h4 class="alert alert-danger mt-4">{{message}}</h4>
                {{/if}}
                <div class="col-12">
                    <button type="submit" class="btn btn-primary submit">Submit</button>
                </div>
            </form>
        </div>
    </section>

    <div class="footer">
        <p>Dilpreet Kaur ---------- 2019CSC1012 ---------- Set-B</p>
    </div>
</body>

</html>